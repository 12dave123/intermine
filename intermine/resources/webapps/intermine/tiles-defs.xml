<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
"http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>
  <!--templates-->
  <definition name="layout.template" path="/layout.jsp">
    <put name="title" value="InterMine" />
    <put name="header" value="/header.jsp"/>
    <put name="menu" value="/menu.jsp"/>
    <put name="errorMessages" value="/errorMessages.jsp"/>
    <put name="footer" value="/footer.jsp"/>
    <put name="body" value=""/>
  </definition>
  <!--pages-->
  <definition name="query.page" extends="layout.template">
    <put name="body" value="query.tile"/>
  </definition>
  <definition name="iqlquery.page" extends="layout.template">
    <put name="body" value="iqlQuery.tile"/>
  </definition>
  <definition name="history.page" extends="layout.template">
    <put name="body" value="history.tile"/>
  </definition>
  <definition name="begin.page" extends="layout.template">
    <put name="body" value="begin.tile"/>
  </definition>
  <definition name="templates.page" extends="layout.template">
    <put name="body" value="templates.tile"/>
  </definition>
  <definition name="help.page" extends="layout.template">
    <put name="body" value="help.tile"/>
  </definition>
  <definition name="classChooser.page" extends="layout.template">
    <put name="body" value="classChooser.tile"/>
  </definition>
  <definition name="results.page" extends="layout.template">
    <put name="body" value="resultsView.tile"/>
  </definition>
  <definition name="error.page" extends="layout.template">
    <put name="body" value="/error.jsp"/>
  </definition>
  <definition name="objectDetails.page" extends="layout.template">
    <put name="body" value="objectDetailsPage.tile"/>
  </definition>
  <definition name="collectionDetails.page" extends="layout.template">
    <put name="body" value="collectionDetailsPage.tile"/>
  </definition>
  <definition name="bagDetails.page" extends="layout.template">
    <put name="body" value="bagDetailsPage.tile"/>
  </definition>
  <definition name="documentation.page" extends="layout.template">
    <put name="body" value="/docbook.jsp"/>
  </definition>
  <definition name="tree.page" extends="layout.template">
    <put name="body" value="tree.tile"/>
  </definition>
  <!--tiles-->
  <definition name="query.tile" path="/query.jsp">
    <put name="main" value="main.tile"/>
    <put name="view" value="view.tile"/>
  </definition>
  <definition name="main.tile" path="/main.jsp" controllerUrl="/initMain.do"/>
  <definition name="view.tile" path="/view.jsp">
    <put name="queryStatistics" value="queryStatistics.tile"/>
  </definition> 
  <definition name="iqlQuery.tile" path="/iqlQuery.jsp">
    <put name="iqlQuery" value="iqlQuery.tile"/>
  </definition>
  <definition name="history.tile" path="/history.jsp">
    <put name="historyBagView" value="historyBagView.jsp"/>
    <put name="historyQueryView" value="historyQueryView.jsp"/>
  </definition>
  <definition name="begin.tile" path="/begin.jsp"/>
  <definition name="bagBuilder.tile" path="/bagBuilder.jsp">
    <put name="bagBuilder" value="bagBuilder.jsp"/>
  </definition>
  <definition name="classChooser.tile" path="/queryClassSelect.jsp"
              controllerUrl="/initQueryClassSelect.do"/>
  <definition name="iqlQuery.tile" path="/iqlQuery.jsp" controllerUrl="/initIqlQuery.do"/>
  <definition name="queryView.tile" path="/queryView.jsp" controllerUrl="/initQueryView.do"/>
  <definition name="queryStatistics.tile" path="/queryStatistics.jsp"/>
  <definition name="resultsView.tile" path="/results.jsp">
    <put name="table" value="table.jsp"/>
    <put name="queryName" value="queryName.jsp"/>
    <put name="saveQuery" value="saveQuery.tile"/>
  </definition>
  <definition name="templates.tile" path="/templates.jsp"/>
  <definition name="help.tile" path="/help.jsp"/>
  <definition name="resultsCell.tile" path="/resultsCell.jsp" controllerUrl="/initResultsCell.do"/>
  <definition name="objectSummary.tile" path="/objectSummary.jsp" controllerUrl="/initResultsCell.do"/>
  <definition name="objectDetailsPage.tile" path="/objectDetailsPage.jsp" controllerUrl="/initObjectDetails.do"/>
  <definition name="objectDetails.tile" path="/objectDetails.jsp" controllerUrl="/initResultsCell.do"/>
  <definition name="collectionDetailsPage.tile" path="/collectionDetailsPage.jsp"
              controllerUrl="/initCollectionDetails.do">
    <put name="table" value="/table.jsp"/>
  </definition>
  <definition name="bagDetailsPage.tile" path="/bagDetailsPage.jsp" 
              controllerUrl="/initBagDetails.do">
    <put name="table" value="/table.jsp"/>
  </definition>
  <definition name="tree.tile" path="/tree.jsp" controllerUrl="/initTree.do"/>
  <definition name="saveQuery.tile" path="/saveQuery.jsp"/>
</tiles-definitions>
