 <!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
  "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>
<definition 
    name="layout.template" 
    path="/layout.jsp">
    <put name="title" value="FlyMine" />
    <put name="header" value="/header.jsp"/>
    <put name="menu" value="/menu.jsp"/>
    <put name="footer" value="/footer.jsp"/>
    <put name="body" value=""/>
    <put name="right" value="fqlquery.jsp"/>
</definition>
<definition name="index.page" extends="layout.template">
    <put name="body" value="/index.jsp"/>
</definition>
<definition name="query.page" extends="layout.template">
    <put name="body" value="query.tile"/>
</definition>
<definition name="results.page" extends="layout.template">
    <put name="body" value="resultsView.tile"/>
</definition>
<definition name="error.page" extends="layout.template">
    <put name="body" value="/error.jsp"/>
</definition>
<definition name="documentation.page" extends="layout.template">
    <put name="body" value="/docbook.jsp"/>
</definition>
<definition name="tribody.template" path="/tribody.jsp">
</definition>
<definition name="sidebar.tile" path="/sidebar.jsp">
    <put name="sidebarOne" value="queryClassSelect.jsp"/>
    <put name="sidebarTwo" value="queryAliasSelect.jsp"/>
    <put name="sidebarFour" value="runQuery.jsp"/>
    <put name="sidebarFive" value="restartQuery.jsp"/>
</definition>
<definition name="queryBuild.tile" path="/queryBuild.jsp" controllerUrl="/initQueryBuild.do">
</definition>
<definition name="queryView.tile" path="/queryView.jsp" controllerUrl="/initQueryView.do">
</definition>

<definition name="query.tile" extends="tribody.template" controllerUrl="/initQuery.do">
    <put name="left" value="sidebar.tile"/>
    <put name="top" value="queryBuild.tile" />
    <put name="bottom" value="queryView.tile"/>
</definition>

<definition name="resultsView.tile" path="/results.jsp" controllerUrl="/initResultsView.do">
</definition>

<definition name="resultsCell.tile" path="/resultsCell.jsp" controllerUrl="/initResultsCell.do">
</definition>

</tiles-definitions>

