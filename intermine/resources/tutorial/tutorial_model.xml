<model name="tutorial">

  <class name="org.flymine.model.tutorial.Address">
    <attribute name="address" type="java.lang.String" primary-key="true"/>
  </class>

  <class name="org.flymine.model.tutorial.Employable" is-interface="true"/>

  <class name="org.flymine.model.tutorial.Employee" implements="org.flymine.model.tutorial.Employable">
    <attribute name="name" type="java.lang.String" primary-key="true"/>
    <attribute name="fullTime" type="boolean"/>
    <attribute name="age" type="int" primary-key="true"/>
    <reference name="department" referenced-type="org.flymine.model.tutorial.Department" reverse-reference="employees"/>
    <reference name="address" referenced-type="org.flymine.model.tutorial.Address" primary-key="true"/>
  </class>

  <class name="org.flymine.model.tutorial.Manager" extends="org.flymine.model.tutorial.Employee">
    <attribute name="title" type="java.lang.String"/>
  </class>

  <class name="org.flymine.model.tutorial.Contractor" implements="org.flymine.model.tutorial.Employable">
    <attribute name="name" type="java.lang.String" primary-key="true"/>
    <reference name="personalAddress" referenced-type="org.flymine.model.tutorial.Address" primary-key="true"/>
    <reference name="businessAddress" referenced-type="org.flymine.model.tutorial.Address" primary-key="true"/>
    <collection name="companys" referenced-type="org.flymine.model.tutorial.Company" ordered="true" reverse-reference="contractors"/>
  </class>

  <class name="org.flymine.model.tutorial.Department">
    <attribute name="name" type="java.lang.String" primary-key="true"/>
    <reference name="company" referenced-type="org.flymine.model.tutorial.Company" reverse-reference="departments" primary-key="true"/>
    <reference name="manager" referenced-type="org.flymine.model.tutorial.Manager"/>
    <collection name="employees" referenced-type="org.flymine.model.tutorial.Employee" ordered="true" reverse-reference="department"/>
  </class>

  <class name="org.flymine.model.tutorial.Company">
    <attribute name="name" type="java.lang.String" primary-key="true"/>
    <attribute name="vatNumber" type="int"/>
    <reference name="address" referenced-type="org.flymine.model.tutorial.Address" primary-key="true"/>
    <collection name="departments" referenced-type="org.flymine.model.tutorial.Department" ordered="true" reverse-reference="company"/>
    <collection name="contractors" referenced-type="org.flymine.model.tutorial.Contractor" ordered="true" reverse-reference="companys"/>
  </class>

</model>
